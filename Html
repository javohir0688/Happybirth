    <script>
        // Konfetti animatsiyasi
        function createConfetti() {
            const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#ffeaa7', '#fd79a8'];
            
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 2 + 's';
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }, i * 50);
            }
        }

        // Yoshni o'zgartirish
        function changeAge() {
            const ageElement = document.getElementById('age');
            const newAge = prompt('Yangi yoshni kiriting:', ageElement.textContent);
            if (newAge && !isNaN(newAge)) {
                ageElement.textContent = newAge;
                ageElement.style.animation = 'none';
                setTimeout(() => {
                    ageElement.style.animation = 'numberGlow 2s ease-in-out infinite alternate';
                }, 100);
            }
        }

        // Musiqa ijro etish
        function playMusic() {
            alert('üéµ Tug\'ilgan kun qo\'shig\'i ijro etilmoqda! üé∂\n\n"Tug\'ilgan kuning muborak bo\'lsin,\nBarcha orzularing ro\'yobga chiqsin!"');
        }

        // Foto qo'shish
        function addPhoto(element) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        element.style.backgroundImage = `url(${e.target.result})`;
                        element.style.backgroundSize = 'cover';
                        element.style.backgroundPosition = 'center';
                        element.innerHTML = '';
                        element.style.border = 'none';
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }

        // Sahifa yuklanganda konfetti
        window.addEventListener('load', function() {
            setTimeout(() => {
                createConfetti();
            }, 1000);
        });
    </script>
